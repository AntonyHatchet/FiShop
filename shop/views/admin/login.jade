extends layout
block content
    section.container
        .admin-login-header
          a.close(data-dismiss="modal") &times;
          h3 Log In
        .admin-login-body
          form(action="/account/login", method="post").form-horizontal
            fieldset
                br
                .control-group
                    .control-group
                        label.control-label(for="email") Email
                        .controls
                            input(type="text", name="email", placeholder="Email Address")
                .control-group
                    .control-group
                        label.control-label(for="password") Password
                        .controls
                            input(type="password", name="password", placeholder="Password")
        .modal-footer
          a.btn(data-dismiss="modal") Close
          a.btn.btn-primary(onclick="$('.modal-body > form').submit();") Log In